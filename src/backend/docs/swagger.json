{
  "openapi": "3.0.0",
  "info": {
    "title": "Customer Survey API",
    "description": "API for the AI-powered customer survey system",
    "version": "1.0.0",
    "contact": {
      "email": "admin@example.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "Development server"
    }
  ],
  "tags": [
    {
      "name": "database",
      "description": "Database related operations"
    },
    {
      "name": "backups",
      "description": "Database backup operations"
    }
  ],
  "paths": {
    "/db/health": {
      "get": {
        "tags": ["database"],
        "summary": "Get database connection status",
        "description": "Returns the current status of the database connection",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DBHealthResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/db/stats": {
      "get": {
        "tags": ["database"],
        "summary": "Get database statistics",
        "description": "Returns statistics about the database collections and documents",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DBStatsResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/backups": {
      "get": {
        "tags": ["backups"],
        "summary": "List all backups",
        "description": "Returns a list of all available database backups",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "directory",
            "in": "query",
            "description": "Custom directory to look for backups",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BackupListResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "500": {
            "description": "Server error"
          }
        }
      },
      "post": {
        "tags": ["backups"],
        "summary": "Create a new backup",
        "description": "Creates a new database backup",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Backup options",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBackupRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Backup created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateBackupResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/backups/restore": {
      "post": {
        "tags": ["backups"],
        "summary": "Restore from backup",
        "description": "Restores the database from a backup",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Restore options",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RestoreBackupRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Database restored successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Missing backup path"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/backups/scheduled": {
      "post": {
        "tags": ["backups"],
        "summary": "Run scheduled backup",
        "description": "Runs a scheduled backup with automatic cleanup of old backups",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Scheduled backup options",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ScheduledBackupRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Scheduled backup completed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateBackupResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/backups/{name}": {
      "delete": {
        "tags": ["backups"],
        "summary": "Delete a backup",
        "description": "Deletes a specific backup",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "Name of the backup to delete",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "directory",
            "in": "query",
            "description": "Custom directory to look for backups",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Backup deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - Admin only"
          },
          "404": {
            "description": "Backup not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "GenericResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "DBHealthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "status": {
            "type": "object",
            "properties": {
              "state": {
                "type": "integer"
              },
              "status": {
                "type": "string"
              },
              "database": {
                "type": "string"
              },
              "host": {
                "type": "string"
              },
              "port": {
                "type": "integer"
              },
              "models": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "DBStatsResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "stats": {
            "type": "object",
            "properties": {
              "database": {
                "type": "string"
              },
              "collections": {
                "type": "integer"
              },
              "documents": {
                "type": "integer"
              },
              "dataSize": {
                "type": "integer"
              },
              "storageSize": {
                "type": "integer"
              },
              "indexes": {
                "type": "integer"
              },
              "indexSize": {
                "type": "integer"
              },
              "collectionCounts": {
                "type": "object",
                "additionalProperties": {
                  "type": "integer"
                }
              }
            }
          }
        }
      },
      "BackupInfo": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "database": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "created": {
            "type": "string",
            "format": "date-time"
          },
          "size": {
            "type": "integer"
          },
          "sizeFormatted": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "isDirectory": {
            "type": "boolean"
          }
        }
      },
      "BackupListResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "count": {
            "type": "integer"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BackupInfo"
            }
          }
        }
      },
      "CreateBackupRequest": {
        "type": "object",
        "properties": {
          "outputDir": {
            "type": "string",
            "description": "Custom output directory for the backup"
          },
          "gzip": {
            "type": "boolean",
            "description": "Whether to compress the backup",
            "default": true
          }
        }
      },
      "CreateBackupResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              }
            }
          }
        }
      },
      "RestoreBackupRequest": {
        "type": "object",
        "required": ["backupPath"],
        "properties": {
          "backupPath": {
            "type": "string",
            "description": "Path to the backup file or directory"
          },
          "drop": {
            "type": "boolean",
            "description": "Whether to drop collections before restore",
            "default": false
          }
        }
      },
      "ScheduledBackupRequest": {
        "type": "object",
        "properties": {
          "retentionDays": {
            "type": "integer",
            "description": "Number of days to keep backups",
            "default": 7
          },
          "maxBackups": {
            "type": "integer",
            "description": "Maximum number of backups to keep",
            "default": 10
          },
          "outputDir": {
            "type": "string",
            "description": "Custom output directory for the backup"
          },
          "gzip": {
            "type": "boolean",
            "description": "Whether to compress the backup",
            "default": true
          }
        }
      }
    }
  }
} 