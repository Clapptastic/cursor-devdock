{
  "name": "customer-survey",
  "version": "1.0.0",
  "description": "AI-powered interview and survey generation system",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "nodemon src/backend/server.js",
    "test": "jest",
    "test:backup": "jest src/tests/backend/backupController.test.js",
    "test:coverage": "jest --coverage",
    "test:backup:coverage": "jest src/tests/backend/backupController.test.js --coverage",
    "test:all": "npm run test:coverage && npm run coverage:analyze && npm run coverage:badge",
    "coverage:analyze": "node scripts/analyzeCoverage.js",
    "coverage:badge": "node scripts/updateCoverageBadge.js",
    "coverage:check": "npm run test:coverage && npm run coverage:analyze",
    "coverage:update": "npm run test:coverage && npm run coverage:badge",
    "coverage:demo": "node scripts/demoCoverageBadge.js",
    "lint": "eslint .",
    "frontend:debug": "node scripts/debug-frontend.js",
    "db:init": "node src/database/init.js",
    "db:migrate": "node src/database/migrations/runner.js up",
    "db:migrate:down": "node src/database/migrations/runner.js down",
    "db:migrate:specific": "node src/database/migrations/runner.js up",
    "db:setup": "npm run db:migrate",
    "db:rollback": "node src/database/migrate.js down",
    "db:create-migration": "node src/database/create-migration.js",
    "db:seed": "node src/database/seed.js",
    "db:indexes:list": "node src/database/manageIndexes.js list",
    "db:indexes:create": "node src/database/manageIndexes.js create",
    "db:indexes:drop": "node src/database/manageIndexes.js drop",
    "db:backup:create": "node src/database/backup.js create",
    "db:backup:restore": "node src/database/backup.js restore",
    "db:backup:list": "node src/database/backup.js list",
    "db:backup:scheduled": "node src/database/scheduleBackup.js",
    "docs:update": "node src/database/updateSwagger.js update",
    "docs:validate": "node src/database/updateSwagger.js validate",
    "demo:backup-api": "node scripts/testBackupApi.js",
    "db:sql": "node src/database/migrate-supabase.js run",
    "db:sql:create": "node src/database/migrate-supabase.js create",
    "db:sql:list": "node src/database/migrate-supabase.js list",
    "db:test-connection": "node scripts/testSupabase.js",
    "list": "node scripts/dev.js list",
    "generate": "node scripts/dev.js generate",
    "parse-prd": "node scripts/dev.js parse-prd"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "axios": "^1.4.0",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.6.2",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.7.0",
    "boxen": "^7.1.1",
    "gradient-string": "^2.0.2",
    "cli-table3": "^0.6.3",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "prettier": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setupTests.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/tests/"
    ],
    "collectCoverageFrom": [
      "src/backend/**/*.js",
      "src/database/**/*.js",
      "!src/database/migrations/**",
      "!**/*.config.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage",
    "verbose": true,
    "projects": [
      {
        "displayName": "backend",
        "testMatch": [
          "<rootDir>/src/tests/backend/**/*.test.js"
        ],
        "collectCoverageFrom": [
          "src/backend/**/*.js"
        ]
      },
      {
        "displayName": "database",
        "testMatch": [
          "<rootDir>/src/tests/database/**/*.test.js"
        ],
        "collectCoverageFrom": [
          "src/database/**/*.js",
          "!src/database/migrations/**"
        ]
      },
      {
        "displayName": "utils",
        "testMatch": [
          "<rootDir>/src/tests/utils/**/*.test.js"
        ],
        "collectCoverageFrom": [
          "src/shared/**/*.js"
        ]
      }
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT",
  "type": "module"
}