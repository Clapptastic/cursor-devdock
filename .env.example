# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:8080

# Database Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_service_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h

# AI Configuration
# Can use either Anthropic or OpenAI
AI_PROVIDER=anthropic  # anthropic or openai

# Anthropic Configuration (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-7-sonnet-20240229

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo

# Email Configuration
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@yourcompany.com

# Third-party Integrations
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
HUBSPOT_API_KEY=your_hubspot_api_key
NOTION_API_KEY=your_notion_api_key
AIRTABLE_API_KEY=your_airtable_api_key

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# File Storage
STORAGE_BUCKET=exports

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Cors Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# Task Master Configuration
MODEL=claude-3-7-sonnet-20250219
PERPLEXITY_MODEL=sonar-pro
MAX_TOKENS=4000
TEMPERATURE=0.7
DEBUG=false

# Optional - defaults shown
DEFAULT_SUBTASKS=3                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME=customer-survey      # Project name for tasks.json metadata

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7
BACKUP_MAX_COUNT=10

# Microservice Configuration
MICROSERVICE_URL=http://localhost:3001
MICROSERVICE_API_KEY=your_microservice_api_key_here