{
  "name": "customer-survey-microservice",
  "version": "1.0.0",
  "description": "Microservice for Customer Survey Application",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.39.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "axios": "^1.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "prettier": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["/node_modules/"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/tests/"],
    "collectCoverageFrom": ["src/**/*.js"],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "license": "MIT"
} 