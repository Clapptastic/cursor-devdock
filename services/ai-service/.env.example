# AI Service Environment Variables

# Server Configuration
PORT=3006
NODE_ENV=development

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# API Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100        # Maximum requests per window

# External AI Model Configuration
AI_MODEL_API_URL=http://ai-model:8000
AI_MODEL_API_KEY=your_api_key_here

# Logging Configuration
LOG_LEVEL=debug  # debug, info, warn, error

# Service URLs (for internal communication)
SURVEY_SERVICE_URL=http://survey-service:3003
RESPONSE_SERVICE_URL=http://response-service:3004

# Authentication (if needed to communicate with other services)
SERVICE_AUTH_TOKEN=service_token_here 