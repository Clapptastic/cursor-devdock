# Build stage
FROM node:16-alpine as build

WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies 
RUN npm ci || npm install

# Copy application code
COPY . .

# Create a basic build folder if it doesn't exist
RUN mkdir -p build && \
    echo '<!DOCTYPE html><html><head><title>Customer Survey Platform</title></head><body><h1>Customer Survey Platform</h1><div id="root"></div></body></html>' > build/index.html

# Build the application if a build script exists
RUN npm run build || echo "Using default index.html"

# Production stage
FROM nginx:alpine

# Copy built assets from the build stage
COPY --from=build /app/build /usr/share/nginx/html

# Copy the frontend source for debugging
COPY --from=build /app/src/frontend /usr/share/nginx/html/frontend-source

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Default command
CMD ["nginx", "-g", "daemon off;"] 